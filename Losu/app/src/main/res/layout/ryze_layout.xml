<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/pitch_black"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ryze_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_weight="0"
        android:gravity="bottom"
        android:text="@string/ryze_start"
        android:textAllCaps="true"
        android:textAlignment="center"
    />

    <Button
        android:id="@+id/ryze_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_weight="0"
        android:gravity="bottom"
        android:text="@string/ryze_stop"
        android:textAllCaps="true"
        android:textAlignment="center"/>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/pitch_black"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/ryze_1"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ryze_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
         />

    <Button
        android:id="@+id/ryze_3"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/ryze_4"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />


</LinearLayout>

</LinearLayout>