<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/ryze_title</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
        <item name="actionMenuTextColor">@color/ryze_title</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/ryze_title</item>
        <item name="android:colorBackground">@color/ryze_bar</item>
    </style>`

    <style name="DropDownItemSpinnerTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:background">@color/ryze_bar</item>
    </style>

    <!-- Standard configuration for the AutoScaleTextView -->
    <style name="autoScaleTextView">
        <!-- some graphical improvements just for the demo. feel free to remove -->
        <item name="@android:attr/padding">3dp</item>
        <item name="@android:attr/gravity">center</item>

        <!-- use the next line to alter the minimum text size (uncomment first)-->
        <!-- <item name="@attr/minTextSize">10dp</item> -->
    </style>

</resources>
